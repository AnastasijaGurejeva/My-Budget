<resources>

    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Robot" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/scienceMonsterColorPrimary</item>
        <item name="colorPrimaryDark">@color/scienceMonsterColorPrimaryDark</item>
        <item name="colorAccent">@color/scienceMonsterMonsterColorAccent</item>
    </style>

    <style name="AppTheme.CookieMonster" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/cookieMonsterColorPrimary</item>
        <item name="colorPrimaryDark">@color/cookieMonsterColorPrimaryDark</item>
        <item name="colorAccent">@color/cookieMonsterColorAccent</item>
    </style>


    <style name="AppTheme.Robot.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


</resources>
