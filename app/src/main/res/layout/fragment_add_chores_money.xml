<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chores.addChoresMoney"
    android:background="#FFFFFF"
    >

    <EditText
        android:id="@+id/choresDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="140dp"
        android:textSize="20dp"
        android:hint="Enter a Description"
        android:maxLines="1"
        android:inputType="text"
        />
    <TextView
        android:id="@+id/choresSEK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choresDescription"
        android:layout_alignLeft="@+id/choresDescription"
        android:textSize="40dp"
        android:text="SEK"
        android:textColor="@android:color/black"        />

    <EditText
        android:id="@+id/choresAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choresDescription"
        android:layout_alignBottom="@+id/choresSEK"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/choresSEK"
        android:hint="0.00"
        android:inputType="numberDecimal"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/choresImage_inflow_outflow"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/choresSEK"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/choresSEK" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/choresFloatingActionButton_cancelIncome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="50dp"
        android:clickable="true"
        android:src="@drawable/icon_cancel_white"
        app:fabCustomSize="40dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/choresFloatingActionButton_saveIncome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="287dp"
        android:layout_marginEnd="50dp"
        android:clickable="true"
        android:src="@drawable/icon_done_white"
        app:fabCustomSize="40dp" />


</RelativeLayout>